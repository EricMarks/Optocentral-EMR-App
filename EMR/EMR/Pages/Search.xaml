<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Syncfusion="clr-namespace:Syncfusion.SfDataGrid.XForms;assembly=Syncfusion.SfDataGrid.XForms"
             xmlns:local="clr-namespace:EMR.ViewModel"
             x:Class="EMR.Pages.Search" Title="Search">

    <ContentPage.BindingContext>
        <local:SearchInfoViewModel />
    </ContentPage.BindingContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="200"></RowDefinition>
            <RowDefinition Height="200"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="150"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Text="Search Patient:"
               Grid.Row="0"
               Grid.Column="0"
               Margin="20,20,0,0"
               FontSize="25"
               Grid.ColumnSpan="1"
               HorizontalOptions="CenterAndExpand" />
        <Entry x:Name="DOB"
               Grid.Row="2"
               Grid.Column="0"
               Placeholder="DOB"
               WidthRequest="350"
               Margin="50,10,10,0" />
        <Entry x:Name="ID_Number"
               Grid.Row="1"
               Grid.Column="2"
               Placeholder="ID Number"
               Grid.ColumnSpan="2" />
        <Entry x:Name="Entry_LastName"
               Grid.Row="2"
               Grid.Column="2"
               Placeholder="Last Name" />
        <Entry x:Name="Entry_FirstName"
               Grid.Row="2"
               Grid.Column="3"
               Placeholder="First Name" />
        <Button x:Name="btn_Advanced"
                Text="Advanced"
                Grid.Row="3"
                Grid.Column="4" 
                Clicked="Clicked_Advanced"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"/>
        <Button x:Name="btn_Search"
                Text="Search"
                Grid.Row="4"
                Grid.Column="4"
                Clicked="Clicked_SearchPatient"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"      
                />
        
        <Syncfusion:SfDataGrid x:Name="SearchDataGrid"
                               ItemsSource="{Binding SearchInfo}"
                               DefaultColumnWidth="100"
                               Grid.Row="3"
                               Grid.Column="0"
                               Grid.ColumnSpan="4"
                               Grid.RowSpan="2"
                               Margin="30, 30">
            
        </Syncfusion:SfDataGrid>

    </Grid>
</ContentPage>